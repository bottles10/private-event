<h1>Show page</h1>

<div>
  <h2><%= @event.title %></h2>
  <h4><%= @event.location %></h4>
  <p><%= @event.description %></p>
  <h4><%= @event.formatted_date %></h4>
</div>

<% if user_signed_in? %>
  <div>
    <h3>People Attending: <%= @event.attendees.count %> and counting...</h3>
    <ul>
      <% @event.attendees.each do |attendee| %>
        <li><%= attendee.username %></li>
      <% end %>
    </ul>
  </div>
    
  <% if @event.creator == current_user %>
    <%= link_to "Edit", edit_event_path(@event) %> | <%= link_to "Deestroy this event", @event, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
  <% end %>

  <h2><%= link_to "Attend Event", new_attendance_path(event_id: @event), method: :post %></h2>
<% end %>

<div>
<%= link_to "Back to events", events_path %>
</div>
