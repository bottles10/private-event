<h1>Show page</h1>

<div>
  <h2><%= @event.title %></h2>
  <h4><%= @event.location %></h4>
  <p><%= @event.description %></p>
  <h4><%= @event.date %></h4>
</div>

<% if user_signed_in? && @event.creator == current_user %>
  <%= link_to "Edit", "#" %> | <%= link_to "Delete", "#" %>
<% else %>
  <h2><%= link_to "Attend Event", new_attendance_path(event_id: @event), method: :post %></h2>
<% end %>
