<h1>Create an Event</h1>

<%= form_with model: @event do |f| %>

  <div>
    <%= f.label :title %>
    <%= f.text_field :title %> <br>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_area :description %> <br>
  </div>

  <div>
    <%= f.label :location %>
    <%= f.text_field :location %> <br>
  </div>

  <div>
    <%= f.label :date %>
    <%= f.datetime_field :date %>

    <br>
    <br>
  </div>

  <div>
    <%= f.submit %>
  </div>
<% end %>
